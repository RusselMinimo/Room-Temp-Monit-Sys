# Application URL (required for OAuth callbacks and metadata)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Authentication Configuration
# Default admin account (created on first run if users.json doesn't exist)
AUTH_EMAIL=admin@iot.local
AUTH_PASSWORD=change-this-password
# Optional: Pre-hashed password (SHA-256 hex digest)
# AUTH_PASSWORD_HASH=
# Session lifetime in seconds (default: 28800 = 8 hours)
AUTH_SESSION_TTL_SECONDS=28800

# Google OAuth (optional - for Google sign-in)
GOOGLE_CLIENT_ID=your-google-oauth-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# IoT API Security
# Optional: Set this to require API key for /api/ingest and /api/readings
# If not set, endpoints are publicly accessible
IOT_API_KEY=your-secure-api-key-here

# Alert Notifications - Email (Resend API)
# Optional: Configure email alerts via Resend
ALERT_RESEND_API_KEY=re_xxxxxxxxxxxxx
ALERT_EMAIL_FROM=alerts@yourdomain.com
ALERT_EMAIL_TO=admin@yourdomain.com

# Alert Notifications - SMS (Twilio)
# Optional: Configure SMS alerts via Twilio
ALERT_TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
ALERT_TWILIO_AUTH_TOKEN=your_auth_token_here
ALERT_SMS_FROM=+1234567890
ALERT_SMS_TO=+1234567890

# Serial Bridge Configuration (for local Arduino development)
# These are only used by the serial bridge script, not the web app
SERIAL_PORT=COM6
SERIAL_BAUDRATE=9600
IOT_DEVICE_ID=Room-Temperature
IOT_INGEST_URL=http://localhost:3000/api/ingest
BRIDGE_VERBOSE=1
IOT_TEMP_OFFSET_C=0
IOT_HUMIDITY_OFFSET_PCT=0

